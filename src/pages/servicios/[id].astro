---
import Layout from "../../layouts/Layout.astro";
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
  const servicios = await getCollection("servicios");
  return servicios.map((servicio) => ({
    params: { id: servicio.id },
    props: { servicio },
  }));
}

const { servicio } = Astro.props;
const { Content } = await render(servicio);
---

<Layout title={servicio.data.name}>
  <article class="isolate">
    <div class="px-6 pt-8 pb-16 lg:px-8">
      <div class="mx-auto max-w-2xl pt-12 text-center sm:pt-20">
        <h1 class="text-5xl font-semibold tracking-tight text-neutral-900 sm:text-7xl dark:text-white">{servicio.data.name}</h1>
        <p class="mt-8 text-lg font-medium text-pretty text-neutral-500 sm:text-xl/8 dark:text-neutral-400">{servicio.data.description}</p>
      </div>
    </div>
    <div class="bg-white pt-8 pb-24 dark:bg-neutral-900">
      <div class="prose prose-lg mx-auto max-w-3xl px-6 lg:px-8 dark:prose-invert prose-headings:text-neutral-900 dark:prose-headings:text-white prose-p:text-neutral-600 dark:prose-p:text-neutral-400 prose-a:text-primary-600 dark:prose-a:text-primary-400">
        <Content />
      </div>
      <div class="mt-12 text-center">
        <a href="/servicios" class="text-sm/6 font-semibold text-primary-600 dark:text-primary-400">&larr; Volver a servicios</a>
      </div>
    </div>
  </article>
</Layout>
