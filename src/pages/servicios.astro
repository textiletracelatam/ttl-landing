---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const servicios = (await getCollection("servicios")).sort(
  (a, b) => a.data.order - b.data.order
);

type CardColor = "white" | "primary" | "black";

const cardStyles: Record<CardColor, string> = {
  white: "ring-1 ring-neutral-200 dark:bg-neutral-800/50 dark:ring-white/10",
  primary: "bg-primary-600 ring-1 ring-primary-600 dark:bg-primary-700 dark:ring-primary-500",
  black: "bg-neutral-900 ring-1 ring-neutral-900 dark:bg-neutral-800/50 dark:ring-2 dark:ring-primary-500",
};

const titleStyles: Record<CardColor, string> = {
  white: "text-neutral-900 dark:text-white",
  primary: "text-white",
  black: "text-white dark:text-primary-400",
};

const descStyles: Record<CardColor, string> = {
  white: "text-neutral-600 dark:text-neutral-300",
  primary: "text-primary-100",
  black: "text-neutral-300",
};

const priceStyles: Record<CardColor, string> = {
  white: "text-neutral-900 dark:text-white",
  primary: "text-white",
  black: "text-white",
};

const priceSuffixStyles: Record<CardColor, string> = {
  white: "text-neutral-600 dark:text-neutral-400",
  primary: "text-primary-200",
  black: "text-neutral-300",
};

const ctaStyles: Record<CardColor, string> = {
  white: "bg-primary-600 text-white shadow-xs hover:bg-primary-500 focus-visible:outline-primary-600 dark:bg-primary-500 dark:hover:bg-primary-400 dark:focus-visible:outline-primary-500",
  primary: "bg-white text-primary-700 shadow-xs hover:bg-primary-50 focus-visible:outline-white",
  black: "bg-white/10 text-white inset-ring inset-ring-white/5 hover:bg-white/20 focus-visible:outline-white/75",
};

const featureTextStyles: Record<CardColor, string> = {
  white: "text-neutral-600 dark:text-neutral-300",
  primary: "text-primary-100",
  black: "text-neutral-300",
};

const checkStyles: Record<CardColor, string> = {
  white: "text-primary-600 dark:text-primary-400",
  primary: "text-white",
  black: "text-white",
};

const linkStyles: Record<CardColor, string> = {
  white: "text-primary-600 hover:text-primary-500 dark:text-primary-400 dark:hover:text-primary-300",
  primary: "text-white/90 hover:text-white",
  black: "text-white/80 hover:text-white",
};
---

<Layout title="Servicios">
  <div class="isolate">
    <!-- Header -->
    <div class="px-6 pt-8 pb-16 lg:px-8">
      <div class="mx-auto max-w-2xl pt-12 text-center sm:pt-20">
        <h1 class="text-5xl font-semibold tracking-tight text-neutral-900 sm:text-7xl dark:text-white">Servicios</h1>
        <p class="mt-8 text-lg font-medium text-pretty text-neutral-500 sm:text-xl/8 dark:text-neutral-400">Soluciones de trazabilidad textil diseñadas para impulsar la transparencia y sostenibilidad de tu cadena de valor.</p>
      </div>
    </div>

    <!-- Pricing section -->
    <form class="group/tiers bg-white py-5 dark:bg-neutral-900">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mt-16 flex justify-center">
          <fieldset aria-label="Frecuencia de pago">
            <div class="grid grid-cols-2 gap-x-1 rounded-full p-1 text-center text-xs/5 font-semibold inset-ring inset-ring-neutral-200 dark:inset-ring-white/10">
              <label class="group relative rounded-full px-2.5 py-1 has-checked:bg-primary-600 dark:has-checked:bg-primary-500">
                <input type="radio" name="frequency" value="monthly" checked class="absolute inset-0 appearance-none rounded-full" />
                <span class="text-neutral-500 group-has-checked:text-white dark:text-neutral-400">Mensual</span>
              </label>
              <label class="group relative rounded-full px-2.5 py-1 has-checked:bg-primary-600 dark:has-checked:bg-primary-500">
                <input type="radio" name="frequency" value="annually" class="absolute inset-0 appearance-none rounded-full" />
                <span class="text-neutral-500 group-has-checked:text-white dark:text-neutral-400">Anual</span>
              </label>
            </div>
          </fieldset>
        </div>
        <div class="isolate mx-auto mt-10 grid max-w-md grid-cols-1 gap-8 lg:mx-0 lg:max-w-none lg:grid-cols-3">
          {servicios.map((servicio) => {
            const color = servicio.data.cardColor;
            return (
              <div class:list={["flex flex-col rounded-3xl p-8 xl:p-10", cardStyles[color]]}>
                <h3 id={`tier-${servicio.id}`} class:list={["text-lg/8 font-semibold", titleStyles[color]]}>{servicio.data.name}</h3>
                <p class:list={["mt-4 text-sm/6", descStyles[color]]}>{servicio.data.description}</p>
                <p class:list={["mt-6 flex items-baseline gap-x-1 group-not-has-[[name=frequency][value=monthly]:checked]/tiers:hidden"]}>
                  <span class:list={["text-4xl font-semibold tracking-tight", priceStyles[color]]}>{servicio.data.monthlyPrice}</span>
                  <span class:list={["text-sm/6 font-semibold", priceSuffixStyles[color]]}>/mes</span>
                </p>
                <p class:list={["mt-6 flex items-baseline gap-x-1 group-not-has-[[name=frequency][value=annually]:checked]/tiers:hidden"]}>
                  <span class:list={["text-4xl font-semibold tracking-tight", priceStyles[color]]}>{servicio.data.annualPrice}</span>
                  <span class:list={["text-sm/6 font-semibold", priceSuffixStyles[color]]}>/año</span>
                </p>
                <a href={`/servicios/${servicio.id}`} aria-describedby={`tier-${servicio.id}`} class:list={["mt-6 block w-full rounded-md px-3 py-2 text-center text-sm/6 font-semibold focus-visible:outline-2 focus-visible:outline-offset-2", ctaStyles[color]]}>{servicio.data.cta}</a>
                <ul role="list" class:list={["mt-8 flex-1 space-y-3 text-sm/6 xl:mt-10", featureTextStyles[color]]}>
                  {servicio.data.features.map((feature) => (
                    <li class="flex gap-x-3">
                      <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class:list={["h-6 w-5 flex-none", checkStyles[color]]}>
                        <path d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" fill-rule="evenodd" />
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
                {servicio.data.linkText && servicio.data.linkHref && (
                  <a href={servicio.data.linkHref} class:list={["mt-8 block text-center text-sm/6 font-semibold", linkStyles[color]]}>
                    {servicio.data.linkText} <span aria-hidden="true">&rarr;</span>
                  </a>
                )}
              </div>
            );
          })}
        </div>
      </div>
    </form>
  </div>
</Layout>
