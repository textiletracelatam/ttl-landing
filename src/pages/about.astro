---
import Layout from "../layouts/Layout.astro";
import { getEntry, getCollection } from "astro:content";

const about = await getEntry("pages", "about");
const { data } = about;

const valuesEntries = await getCollection("values");
const values = valuesEntries.sort((a, b) => a.data.order - b.data.order);

const teamEntries = await getCollection("team");
const team = teamEntries.sort((a, b) => a.data.order - b.data.order);
---

<Layout title="About">
  <div class="isolate">
    <!-- Hero section -->
    <div class="relative isolate -z-10">
      <svg aria-hidden="true" class="absolute inset-x-0 top-0 -z-10 h-256 w-full mask-[radial-gradient(32rem_32rem_at_center,white,transparent)] stroke-neutral-200 dark:stroke-white/10">
        <defs>
          <pattern id="hero-pattern" width="200" height="200" x="50%" y="-1" patternUnits="userSpaceOnUse">
            <path d="M.5 200V.5H200" fill="none" />
          </pattern>
        </defs>
        <svg x="50%" y="-1" class="overflow-visible fill-neutral-50 dark:fill-neutral-800">
          <path d="M-200 0h201v201h-201Z M600 0h201v201h-201Z M-400 600h201v201h-201Z M200 800h201v201h-201Z" stroke-width="0" />
        </svg>
        <rect width="100%" height="100%" fill="url(#hero-pattern)" stroke-width="0" />
      </svg>
      <div aria-hidden="true" class="absolute top-0 right-0 left-1/2 -z-10 -ml-24 transform-gpu overflow-hidden blur-3xl lg:ml-24 xl:ml-48">
        <div style="clip-path: polygon(63.1% 29.5%, 100% 17.1%, 76.6% 3%, 48.4% 0%, 44.6% 4.7%, 54.5% 25.3%, 59.8% 49%, 55.2% 57.8%, 44.4% 57.2%, 27.8% 47.9%, 35.1% 81.5%, 0% 97.7%, 39.2% 100%, 35.2% 81.4%, 97.2% 52.8%, 63.1% 29.5%)" class="aspect-801/1036 w-200.25 bg-linear-to-tr from-primary-300 to-secondary-300 opacity-30"></div>
      </div>
      <div class="overflow-hidden">
        <div class="mx-auto max-w-7xl px-6 pt-8 pb-16 sm:pt-12 lg:px-8">
          <div class="mx-auto max-w-2xl gap-x-14 lg:mx-0 lg:flex lg:max-w-none lg:items-center">
            <div class="relative w-full lg:max-w-xl lg:shrink-0 xl:max-w-2xl">
              <h1 class="text-5xl font-semibold tracking-tight text-pretty text-neutral-900 sm:text-7xl dark:text-white">{data.heroTitle}</h1>
              {data.heroDescription && <p class="mt-8 text-lg font-medium text-pretty text-neutral-500 sm:max-w-md sm:text-xl/8 lg:max-w-none dark:text-neutral-400">{data.heroDescription}</p>}
            </div>
            <div class="mt-14 flex justify-end gap-8 sm:-mt-44 sm:justify-start sm:pl-20 lg:mt-0 lg:pl-0">
              <div class="ml-auto w-44 flex-none space-y-8 pt-32 sm:ml-0 sm:pt-80 lg:order-last lg:pt-36 xl:order-0 xl:pt-80">
                <div class="relative">
                  <img src={data.heroImages[0].src} alt={data.heroImages[0].alt} class="aspect-2/3 w-full rounded-xl bg-neutral-900/5 object-cover shadow-lg dark:bg-neutral-700/5" />
                  <div class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-neutral-900/10 ring-inset dark:ring-white/10"></div>
                </div>
              </div>
              <div class="mr-auto w-44 flex-none space-y-8 sm:mr-0 sm:pt-52 lg:pt-36">
                <div class="relative">
                  <img src={data.heroImages[1].src} alt={data.heroImages[1].alt} class="aspect-2/3 w-full rounded-xl bg-neutral-900/5 object-cover shadow-lg dark:bg-neutral-700/5" />
                  <div class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-neutral-900/10 ring-inset dark:ring-white/10"></div>
                </div>
                <div class="relative">
                  <div class="aspect-2/3 w-full rounded-xl bg-primary-500 shadow-lg"></div>
                  <div class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-neutral-900/10 ring-inset dark:ring-white/10"></div>
                </div>
              </div>
              <div class="w-44 flex-none space-y-8 pt-32 sm:pt-0">
                <div class="relative">
                  <img src={data.heroImages[2].src} alt={data.heroImages[2].alt} class="aspect-2/3 w-full rounded-xl bg-neutral-900/5 object-cover shadow-lg dark:bg-neutral-700/5" />
                  <div class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-neutral-900/10 ring-inset dark:ring-white/10"></div>
                </div>
                <div class="relative">
                  <img src={data.heroImages[3].src} alt={data.heroImages[3].alt} class="aspect-2/3 w-full rounded-xl bg-neutral-900/5 object-cover shadow-lg dark:bg-neutral-700/5" />
                  <div class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-neutral-900/10 ring-inset dark:ring-white/10"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Mission section -->
    <div class="mx-auto -mt-12 max-w-7xl px-6 sm:mt-0 lg:px-8 xl:-mt-8">
      <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-none">
        <h2 class="text-4xl font-semibold tracking-tight text-pretty text-neutral-900 sm:text-5xl dark:text-white">{data.missionTitle}</h2>
        <div class="mt-6 flex flex-col gap-x-8 gap-y-20 lg:flex-row">
          <div class="lg:w-full lg:max-w-2xl lg:flex-auto">
            <p class="text-lg/8 text-neutral-600 dark:text-neutral-300">{data.missionIntro}</p>
            <p class="mt-6 text-lg/8 text-neutral-600 dark:text-neutral-300">{data.missionBody}</p>
          </div>
          <div class="lg:flex lg:flex-auto lg:justify-center">
            <dl class="w-64 space-y-8 xl:w-80">
              {data.stats.map((stat) => (
                <div class="flex flex-col-reverse gap-y-4">
                  <dt class="text-base/7 text-neutral-600 dark:text-neutral-400">{stat.label}</dt>
                  <dd class="text-5xl font-semibold tracking-tight text-neutral-900 dark:text-white">{stat.value}</dd>
                </div>
              ))}
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Image section -->
    <div class="mt-32 sm:mt-40 xl:mx-auto xl:max-w-7xl xl:px-8">
      <img src={data.teamImage.src} alt={data.teamImage.alt} class="aspect-5/2 w-full object-cover outline-1 -outline-offset-1 outline-black/5 xl:rounded-3xl dark:outline-white/10" />
    </div>

    <!-- Team section -->
    <div class="mx-auto mt-32 max-w-7xl px-6 sm:mt-48 lg:px-8 pb-32">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <h2 class="text-4xl font-semibold tracking-tight text-pretty text-neutral-900 sm:text-5xl dark:text-white">{data.teamHeading}</h2>
        <p class="mt-6 text-lg/8 text-neutral-600 dark:text-neutral-400">{data.teamSubheading}</p>
      </div>
      <ul role="list" class="mx-auto mt-20 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 text-center sm:grid-cols-3 lg:mx-0 lg:max-w-none">
        {team.map((member) => (
          <li>
            <img src={member.data.image} alt="" class="mx-auto size-24 rounded-full outline-1 -outline-offset-1 outline-black/5 dark:outline-white/10" />
            <h3 class="mt-6 text-base/7 font-semibold tracking-tight text-neutral-900 dark:text-white">{member.data.name}</h3>
            <p class="text-sm/6 text-neutral-600 dark:text-neutral-400">{member.data.role}</p>
          </li>
        ))}
      </ul>
    </div>
  </div>
</Layout>
