---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const guias = (await getCollection("guias")).sort(
  (a, b) => a.data.order - b.data.order
);
---

<Layout title="Guías">
  <div class="bg-background pb-24 sm:pb-32">
    <div class="px-6 pt-8 pb-16 lg:px-8">
      <div class="mx-auto max-w-2xl pt-12 text-center sm:pt-20">
        <h1 class="text-5xl font-semibold tracking-tight text-neutral-900 sm:text-7xl dark:text-white">Guías</h1>
        <p class="mt-8 text-lg font-medium text-pretty text-neutral-500 sm:text-xl/8 dark:text-neutral-400">Tutoriales paso a paso para aprovechar al máximo la plataforma.</p>
      </div>
    </div>
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-12 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-2">
        {guias.map((guia) => (
          <article class="group relative flex flex-col overflow-hidden rounded-2xl bg-white shadow-sm ring-1 ring-neutral-900/5 dark:bg-neutral-800 dark:ring-white/10">
            <div class="flex flex-1 flex-col p-6">
              <div class="flex items-center gap-x-4 text-xs">
                <time datetime={guia.data.date.toISOString()} class="text-neutral-500 dark:text-neutral-400">
                  {guia.data.date.toLocaleDateString("es-ES", { year: "numeric", month: "long", day: "numeric" })}
                </time>
              </div>
              <h3 class="mt-3 text-lg font-semibold text-neutral-900 dark:text-white">
                <a href={`/soporte/guias/${guia.id}`}>
                  <span class="absolute inset-0"></span>
                  {guia.data.title}
                </a>
              </h3>
              <p class="mt-3 flex-1 text-sm/6 text-neutral-600 dark:text-neutral-400">{guia.data.description}</p>
            </div>
          </article>
        ))}
      </div>
    </div>
  </div>
</Layout>
