---
import { getEntry } from "astro:content";

const { title, description } = (await getEntry("aliadosHero", "hero"))!.data;
---

<div class="px-6 pt-8 pb-16 lg:px-8">
  <div class="mx-auto max-w-2xl pt-12 text-center sm:pt-20">
    <h1 class="text-5xl font-semibold tracking-tight text-neutral-900 sm:text-7xl dark:text-white">{title}</h1>
    <p class="mt-8 text-lg font-medium text-pretty text-neutral-500 sm:text-xl/8 dark:text-neutral-400">{description}</p>
  </div>
</div>
